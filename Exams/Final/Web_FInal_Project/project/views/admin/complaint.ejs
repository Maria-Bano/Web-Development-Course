<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Complaints</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

  <div class="container my-4">
    <h2 class="mb-4 text-primary">User Complaints</h2>

    <div class="row">
      <% complaints.forEach(complaint => { %>
        <div class="col-md-6 mb-4">
          <div class="card shadow-sm border-start border-4 border-primary">
            <div class="card-body">
              <h5 class="card-title mb-2"><i class="bi bi-person-circle"></i> <%= complaint.userId.firstName %> <%= complaint.userId.lastName %></h5>
              <p class="mb-1"><strong>Email:</strong> <%= complaint.userId.email %></p>
              <p class="mb-1"><strong>Phone:</strong> <%= complaint.userId.phone || 'N/A' %></p>
              <p class="mb-1"><strong>Order ID:</strong> <%= complaint.orderId._id %></p>
              <p class="mb-1"><strong>Message:</strong> <%= complaint.message %></p>
              <p class="mb-0 text-muted"><small>Submitted on: <%= new Date(complaint.createdAt).toLocaleString() %></small></p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>