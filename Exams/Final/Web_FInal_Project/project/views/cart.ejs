<h2>Your Cart</h2>
<% if (cartItems.length === 0) { %>
  <p>Your cart is empty.</p>
<% } else { %>
  <ul>
    <% cartItems.forEach(item => { %>
      <li>
        <%= item.product.name %> -
        Qty: <%= item.quantity %> -
        Price: $<%= item.price %> -
        Total: $<%= item.price * item.quantity %>
      </li>
    <% }) %>
  </ul>
  <p><strong>Total:</strong> $<%= total %></p>
  <form action="/checkout" method="GET">
    <button type="submit">Checkout</button>
  </form>
<% } %>
