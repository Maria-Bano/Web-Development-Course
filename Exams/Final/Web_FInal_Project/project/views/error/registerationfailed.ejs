    body {
      font-family: Arial, sans-serif;
      background: #fff7f7;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }
    .warning-box {
      padding: 20px 30px;
      background-color: #ffe6e6;
      color: #d8000c;
      border: 1px solid #d8000c;
      border-radius: 8px;
