<!DOCTYPE html>
<html>
    <head>
        <title>InStyle Clone</title>
        <link rel="stylesheet" href="/css/style.css">
        <!-- <link rel="stylesheet" href="/Public/Lab_1/css/bootstrap.min.css"> -->
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="js/bootstrap.bundle.min.js"></script> 
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"> 
    </head>

    <body>

        <%- include('partials/header') %>

        <div id="myCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
            <!-- Indicators/dots -->
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
                <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
            </div>
            
            <!-- The slideshow/carousel -->
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="frontimg" src="/images/products/mainimg.webp" alt="Main_Img">
                </div>
                <div class="carousel-item">
                    <img class="frontimg" src="/images/products/mainimg2.webp" alt="Main_Img2">
                </div>
            </div>
            
            <!-- Left and right controls/icons -->
            <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>

        <div class="imgm2_con">
            <img class="imgm2" src="/images/products/imgm2ss.webp" alt="img">
        </div>

        <div class="container-fluid">
            <div class="row justify-content-center g-4"> 
                <div class="col-lg-3 col-md-3 col-6">
                    <img class="img-fluid" src="/images/products/imgm2.webp" alt="img">
                </div>
                <div class="col-lg-3 col-md-3 col-6">
                    <img class="img-fluid" src="/images/products/imgm5.webp" alt="img">
                </div>
                <div class="col-lg-3 col-md-3 col-6">
                    <img class="img-fluid" src="/images/products/imgm3.webp" alt="img">
                </div>
                <div class="col-lg-3 col-md-3 col-6">
                    <img class="img-fluid" src="/images/products/imgm4.webp" alt="img">
                </div>
            </div>
        </div>

        <div class="container mt-5">
            <h2 class="text-center mb-4">Our Products</h2>
            <div class="row justify-content-center">
                <% products.forEach(product => { %>
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <a href="/products/detail/<%= product._id %>">
                            <img src="<%= product.imageUrl %>" class="card-img-top" alt="<%= product.name %>">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="/products/detail/<%= product._id %>"><%= product.name %></a>
                            </h5>
                            <p class="card-text"><%= product.description %></p>
                            <p class="card-text"><strong>Price:</strong> $<%= product.price %></p>
                            <p class="card-text"><span class="badge bg-secondary"><%= product.category %></span></p>
                        </div>
                    </div>

                </div>
            <% }) %>


        <div class="trending-container">
            <h2>TRENDING NOW</h2>
            <div class="tabs">
                <!-- Hidden radio buttons for state control -->
                <input type="radio" id="tab1" name="tabs" checked>
                <input type="radio" id="tab2" name="tabs">
                <input type="radio" id="tab3" name="tabs">
                <input type="radio" id="tab4" name="tabs">
                <input type="radio" id="tab5" name="tabs">
                
                <!-- Visible tab labels -->
                <div class="tab-labels">
                    <label for="tab1" class="tab-label">DENIM</label>
                    <label for="tab2" class="tab-label">NEW IN</label>
                    <label for="tab3" class="tab-label">HOLIDAY SHOP</label>
                    <label for="tab4" class="tab-label">SWIMWEAR</label>
                    <label for="tab5" class="tab-label">CO-ORDS</label>
                    <span class="sliding-bar"></span>
                </div>
                
                <!-- Product content for each tab -->
                <div class="tab-content">
                    <!-- DENIM products -->
                    <div class="products" id="denim-products">
                        <div class="product">
                            <img src="/images/products/denim1.webp" alt="Denim Jeans">
                            <div class="discount">29% OFF</div>
                        </div>
                        <div class="product">
                            <img src="/images/products/d2.webp" alt="Denim Jacket">
                            <div class="discount">21% OFF</div>
                        </div>
                        <div class="product">
                            <img src="/images/products/d3.webp" alt="Denim Jacket">
                            <div class="discount">21% OFF</div>
                        </div>
                        <div class="product">
                            <img src="/images/products/d4.webp" alt="Denim Jacket">
                            <div class="discount">21% OFF</div>
                        </div>
                        <div class="product">
                            <img src="/images/products/d5.webp" alt="Denim Jacket">
                            <div class="discount">21% OFF</div>
                        </div>
                    </div>
                    
                    <!-- NEW IN products -->
                    <div class="products" id="newin-products">
                        <div class="product">
                            <img src="/images/products/imgm3.webp" alt="New Dress">
                            <div class="discount">20% OFF</div>
                        </div>
                        <div class="product">
                            <img src="/images/products/imgm4.webp" alt="New Top">
                            <div class="discount">33% OFF</div>
                        </div>
                        <div class="product">
                            <img src="/images/products/imgm5.webp" alt="New Top">
                            <div class="discount">33% OFF</div>
                        </div>
                        <div class="product">
                            <img src="/images/products/imgm2.webp" alt="New Top">
                            <div class="discount">33% OFF</div>
                        </div>
                    </div>
                    
                    <!-- HOLIDAY SHOP products -->
                    <div class="products" id="holiday-products">
                        <div class="product">
                            <img src="/images/products/imgm3.webp" alt="Holiday Dress">
                            <div class="discount">79% OFF</div>
                        </div>
                        <div class="product">
                            <img src="/images/products/imgm3.webp" alt="Holiday Dress">
                            <div class="discount">79% OFF</div>
                        </div>
                        
                    </div>
                    
                    <!-- SWIMWEAR products -->
                    <div class="products" id="swimwear-products">
                        <div class="product">
                            <img src="/images/products/d5.webp" alt="Swimsuit">
                            <div class="discount">25% OFF</div>
                        </div>
                        <div class="product">
                            <img src="/images/products/d5.webp" alt="Swimsuit">
                            <div class="discount">25% OFF</div>
                        </div>
                        
                    </div>
                    
                    <!-- CO-ORDS products -->
                    <div class="products" id="coords-products">
                        <div class="product">
                            <img src="/images/products/imgm7.webp" alt="Co-ord Set">
                            <div class="discount">30% OFF</div>
                        </div>
                        <div class="product">
                            <img src="/images/products/imgm7.webp" alt="Co-ord Set">
                            <div class="discount">30% OFF</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('partials/footer') %>
    </body>
</html>
