<!DOCTYPE html>
<html>
    <head>
        <title>InStyle Clone</title>
        <link rel="stylesheet" href="/css/style.css">
        <!-- <link rel="stylesheet" href="/Public/Lab_1/css/bootstrap.min.css"> -->
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="js/bootstrap.bundle.min.js"></script> 
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"> 
    </head>

    <body>
<%- include('../partials/header') %>

<h1>Welcome Admin</h1>

<h2>All Products</h2>
<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(product => { %>
      <tr>
        <td><%= product.name %></td>
        <td>$<%= product.price %></td>
        <td>
            <a href="/admin/products/edit/<%= product._id %>" class="btn btn-warning" style="margin-right: 10px;">Edit</a>

            <form action="/admin/products/<%= product._id %>" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </td>

      </tr>
    <% }) %>
  </tbody>
</table>

<a href="/admin/products/new" class="btn">Add New Product</a>

<%- include('../partials/footer') %>
    </body>
</html>